<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paket Wisata Pulau Tidung Super Lengkap</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        .container {
            width: 90%;
            margin: 0 auto;
        }

        h1, h2 {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #333;
            color: white;
        }

        .fasilitas {
            background-color: #f0f0f0;
            padding: 20px;
            border: 1px solid #ccc;
        }

        .fasilitas ul {
            list-style-type: none;
            padding: 0;
        }

        .fasilitas ul li {
            padding: 5px 0;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Paket Wisata Pulau Tidung Super Lengkap</h1>

    <h2>Harga Paket Pulau Tidung Super Lengkap</h2>
    <table>
        <thead>
            <tr>
                <th>Peserta</th>
                <th>Boat Fery (2 Hari 1 Malam)</th>
                <th>Boat Fery (3 Hari 2 Malam)</th>
                <th>Speedboat (2 Hari 1 Malam)</th>
                <th>Speedboat (3 Hari 2 Malam)</th>
                <th>Boat Bahari Express (2 Hari 1 Malam)</th>
                <th>Boat Bahari Express (3 Hari 2 Malam)</th>
            </tr>
        </thead>
        <tbody>
            <% paketTidung.forEach(function(paket) { %>
                <tr>
                    <td><%= paket.peserta %></td>
                    <td><%= paket.hargaBoatFery2H1M %></td>
                    <td><%= paket.hargaBoatFery3H2M %></td>
                    <td><%= paket.hargaSpeedboat2H1M %></td>
                    <td><%= paket.hargaSpeedboat3H2M %></td>
                    <td><%= paket.hargaBahariExpress2H1M %></td>
                    <td><%= paket.hargaBahariExpress3H2M %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h2>Fasilitas Paket Pulau Tidung Super Lengkap</h2>
    <div class="fasilitas">
        <ul>
            <% fasilitas.forEach(function(item) { %>
                <li><%= item %></li>
            <% }); %>
        </ul>
    </div>
</div>

</body>
</html>
